<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	package="com.xianle.doomtnt" android:installLocation="preferExternal"
	android:versionCode="20" android:versionName="resort icon">
	<application android:label="@string/app_name" android:icon="@drawable/icon">
		<activity android:name="com.xianle.doomtnt.MainActivity"
			android:label="@string/app_name" android:screenOrientation="landscape"
			android:configChanges="mcc|mnc|locale|touchscreen|keyboardHidden|navigation|orientation|screenLayout|fontScale|uiMode"
			android:windowSoftInputMode="stateUnspecified|adjustPan" />

		<activity android:name=".CoverActivity"
			android:screenOrientation="landscape" android:label="@string/app_name">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>

		<activity android:name="tk.niuzb.game.SetPreferencesActivity"
			android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen"
			android:screenOrientation="landscape" android:label="Options" />

		<activity android:name="tk.niuzb.game.TouchReposition"
			android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen"
			android:screenOrientation="landscape" android:label="prefs">
			<intent-filter>
				<action android:name="tk.niuzb.doom.pref" />
				<category android:name="android.intent.category.DEFAULT" />
			</intent-filter>
		</activity>



		<!-- end added by admod niuzb -->
	</application>
	<uses-sdk android:minSdkVersion="3" android:targetSdkVersion="8" />

	<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

</manifest>
